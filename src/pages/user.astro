---
// src/pages/user.astro
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="FORGOR - User Profile">
    <div class="flex flex-col min-h-screen bg-purple-900">
        <header class="flex items-center justify-between p-4 bg-purple-800 shadow-md">
            <div class="text-white text-2xl font-display">FORGOR</div>
            <a href="/app" class="inline-flex items-center text-neonGreen hover:underline">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
                Back to Search
            </a>
        </header>

        <main class="flex-grow flex items-center justify-center p-8 text-white">
            <section class="text-center max-w-2xl bg-purple-700 p-8 shadow-xl">
                <img src="/icons/icon.png" alt="User Avatar" class="w-24 h-24 mx-auto mb-4 border-4 border-neonGreen" />
                <h1 class="text-white text-4xl sm:text-5xl font-display mb-2">Welcome, <span id="username">User</span>!</h1> {/* Added span for username */}
                <p class="text-white text-lg leading-relaxed mb-6">
                    This is your personalized profile dashboard.
                </p>
                <div class="space-y-4">
                    <p class="text-gray-300">Email: <span id="user-email">loading...</span></p> {/* Placeholder for email if you add it to token */}
                    <button class="bg-neonGreen text-purple-900 font-bold py-2 px-5 hover:opacity-90">Edit Profile</button>
                    
                    <button
                        id="bulk-download-button"
                        class="bg-blue-600 text-white font-bold py-2 px-5 hover:opacity-90 ml-4"
                    >
                        Download All
                    </button>

                    <button
                        id="logout-button"
                        class="bg-red-600 text-white font-bold py-2 px-5 hover:opacity-90 ml-4"
                    >
                        Log Out
                    </button>
                </div>
            </section>
        </main>
        
        <Footer />

        {/* Client-side script for user page logic */}
        <script type="module" src="../js/user.js"></script>
    </div>
</Layout>