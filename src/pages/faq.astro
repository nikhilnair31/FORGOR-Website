---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { faqs } from '../data/faqs';
---

<Layout title="FORGOR - Frequently Asked Questions">
  <Header />

  <main class="flex-grow flex justify-center px-6 py-16 text-white bg-purple-DEFAULT">
    <section class="max-w-6xl w-full">
      <!-- Page title -->
      <h1 class="text-4xl sm:text-5xl font-display mb-12 text-center">
        Questions & Answers about FORGOR
      </h1>

      <!-- Grid of Q&A blocks -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {faqs.map(({ q, a }) => (
          <div class="bg-purple-800 p-6 md:p-8 rounded-none">
            <h3 class="text-2xl font-display text-neonGreen-DEFAULT mb-3">{q}</h3>
            <p class="text-lg leading-relaxed opacity-90">{a}</p>
          </div>
        ))}
      </div>
    </section>
  </main>

  <Footer />
</Layout>
