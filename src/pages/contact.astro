---
// src/pages/contact.astro
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="FORGOR - Contact Us">
    <Header />
    
    <main class="flex-grow flex items-center justify-center p-8">
        <section class="text-center max-w-2xl">
            <h1 class="text-white text-4xl sm:text-5xl font-display mb-6">Contact</h1>
            <p class="text-white text-lg leading-relaxed mb-4">
                Have questions, feedback, or need support? We're here to help!
            </p>
            <ul class="text-white text-lg leading-relaxed mb-6 space-y-2">
                <li>
                    <strong>Email:</strong>
                    <a 
                    href="mailto:nikhil@forgor.space?subject=FORGOR%20Support&body=Hi%20team%2C%0A%0A"
                    class="text-neonGreen hover:underline"
                    >
                    nikhil@forgor.space
                    </a>
                </li>
            </ul>
            <p class="text-white text-lg leading-relaxed">
                We aim to respond to all inquiries within 24-48 business hours.
            </p>
        </section>
    </main>
    
    <Footer />
</Layout>