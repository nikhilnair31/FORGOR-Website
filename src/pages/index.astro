---
// src/pages/index.astro (Landing Page)
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="FORGOR - Your AI Memory Vault">
    <Header />
    
    <main class="relative w-full flex-grow flex items-center justify-center overflow-hidden">
        <section class="z-10 text-left max-w-4xl px-8">
            <h1 class="text-5xl sm:text-7xl font-display leading-tight">
                <a class="text-neonGreen underline" href="/app">FORGOR</a> 
                — this is <br /> futureproof memory
            </h1>
            <p class="text-white mt-6 text-lg max-w-md">
                An AI memory system that saves everything you care about — automatically, instantly, intelligently.
            </p>
        </section>
        
        <section>
            <img src="/icons/icon.png" alt="feature 1" class="absolute top-10 left-20 w-64 h-64" />
        </section>
    </main>
    
    <Footer />
</Layout>