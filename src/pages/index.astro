---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import Steps from '../components/Steps.astro';
import Features from '../components/Features.astro';
import Testimonials from '../components/Testimonials.astro';
import FAQ from '../components/FAQ.astro';

// --- Placeholder Links (UPDATE THESE WITH YOUR ACTUAL STORE/EXTENSION LINKS) ---
const PLAY_STORE_LINK = "https://play.google.com/store/apps/details?id=com.sil.buildmode"; // Replace with your Google Play Store link
const CHROME_STORE_LINK = "https://chromewebstore.google.com/detail/forgor/fgaloedffhlpphbgenkjckpofkaioeig"; // Replace with your Chrome Web Store link
---

<Layout title="FORGOR - Never FORGOR Anything Again">
    <Header />
    
    <main class="relative w-full flex-grow flex flex-col items-center justify-center text-white overflow-hidden py-16 px-4 sm:px-8 bg-purple-DEFAULT">
        <!-- Hero Section -->
        <Hero />

        <!-- Key Features Section -->
        <Features />

        <!-- How It Works Section -->
        <Steps />

        <!-- Cheeky Testimonial Section -->
        <Testimonials />
        
        <!-- FAQ Section -->
        <FAQ />

        <!-- Final CTA -->
        <section class="z-20 w-full text-center mt-20">
            <h2 class="text-4xl font-display mb-8">Ready to Stop Forgetting?</h2>
            <div class="mt-10 flex flex-col sm:flex-row justify-center items-center gap-6">
                <a href={PLAY_STORE_LINK} target="_blank" rel="noopener noreferrer" 
                   class="bg-neonGreen text-black font-bold py-4 px-10 rounded-none text-xl hover:bg-neonGreen-200 transition-colors duration-300 flex items-center justify-center">
                    <img src="/icons/google-play.svg" alt="Google Play Store" class="h-8 w-8 mr-3 rounded-none"/> {/* Placeholder icon */}
                    Get on Android
                </a>
                <a href={CHROME_STORE_LINK} target="_blank" rel="noopener noreferrer" 
                   class="bg-neonGreen text-black font-bold py-4 px-8 rounded-none text-lg sm:text-xl hover:bg-neonGreen-200 transition-colors duration-300 flex items-center justify-center">
                    <img src="/icons/chrome-web-store.svg" alt="Chrome Web Store" class="h-8 w-8 mr-3 rounded-none"/> {/* Placeholder icon */}
                    Get on Chrome
                </a>
            </div>
            <p class="mt-6 text-sm opacity-70">Already installed? Log in to sync your memory vault.</p>
        </section>
    </main>
    
    <Footer />
</Layout>