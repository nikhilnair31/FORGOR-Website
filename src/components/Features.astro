const features = [
    {
        icon: "/icons/capture.svg",
        title: "Capture Anything, Anywhere",
        text: "Easily save screenshots from your Android phone or web pages with our Chrome Extension."
    },
    {
        icon: "/icons/robot.svg",
        title: "AI-Powered Tagging",
        text: "Our intelligent AI automatically extracts keywords, themes, moods, and even accent colors, making content effortlessly searchable."
    },
    {
        icon: "/icons/search.svg",
        title: "Smart Search & Discovery",
        text: "Find exactly what you need with powerful semantic search, re-discover old ideas, and explore related content."
    },
    {
        icon: "/icons/mail.svg",
        title: "Personalized Insights",
        text: "Receive weekly or monthly AI-generated summaries of your saved content, highlighting trends and offering actionable insights."
    },
    {
        icon: "/icons/encrypted.svg",
        title: "Private & Secure",
        text: "Your ideas are yours alone. FORGOR uses robust security measures to keep your data safe and private."
